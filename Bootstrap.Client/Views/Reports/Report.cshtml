@using Stimulsoft.Report.Mvc;
@using Stimulsoft.Report.Web;
@using Stimulsoft.System.Web.UI.WebControls;
@{
    ViewBag.Title = "Reports";
    Layout = "_Root";
}
@section css {
    <style>
        #Viewer {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
        }
    </style>
   
}
<div id="Viewer">
    @Html.StiNetCoreViewer(new StiNetCoreViewerOptions()
    {
        Actions =
        {
            GetReport = "GetReport",
            ViewerEvent = "ViewerEvent"
        },
        Appearance =
        {
            //BackgroundColor = System.Drawing.Color.FromArgb(255, 255, 255),
            ScrollbarsMode = true,
            ImagesQuality = StiImagesQuality.High
        },
        Toolbar = 
        {
            ShowOpenButton = false,
            ShowResourcesButton = false,
            ShowFullScreenButton = false,
            ShowBookmarksButton = false,
            ShowParametersButton = false,
            ShowAboutButton = false,
            ShowSaveButton = false,
            //PrintDestination = StiPrintDestination.Pdf
        },
        Width = Unit.Percentage(100),
        Height = Unit.Percentage(100),
        Localization = "Localization/zh-CHT.xml"
    })
</div>