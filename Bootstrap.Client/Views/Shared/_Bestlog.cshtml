    <link href="~/lib/bootstrap-multiselect/bootstrap-multiselect.css" rel="stylesheet" asp-append-version="true"/>
    <style>
        table {
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
        }

        .datepicker > input,
        .timepicker > input {
            cursor: pointer;
        }

        .modal-body.modal-query {
            overflow: visible;
        }

        .typeahead.dropdown-menu {
            z-index: 1050;  
        }

        /*
            修正下拉選單寬度        
        */
        .form-select .dropdown-menu { 
            width: auto;
        }

        .multiselect {
            text-align: left;
        }

        .multiselect-container {
            width: 100%;
            z-index: 1050;
        }

            .multiselect-container li a label {
                display: inline-block;
                position: relative;
                vertical-align: middle;
                text-align: left;
                z-index: 1050;
            }

        .input-group.input-append.datepicker > div {
            display: flex !important;
        }

        .input-group.input-append.datepicker > input {
            padding-right: 12px;
        }

        .modal:not(#dialogAdvancedSearch):not([aria-labelledby="mySearchModalLabel"]) .modal-dialog {
            max-width: 90% !important;
        }

        .modal:not(#dialogAdvancedSearch):not([aria-labelledby="mySearchModalLabel"]) .modal-dialog .modal-body .tab-content .tab-content-item {
            height: calc(100vh - 256px);
            overflow-y: auto;
        }
        
        .modal input.form-control {
            font-size: 0.87rem !important;
            height: calc(1.25em + 0.75rem + 2px) !important;
        }

        [data-toggle="LgbValidate"] input[type="text"], [data-toggle="LgbValidate"] input[type="password"] {
            padding-right: 12px !important;
        }        

    </style>
    @RenderSection("css", false)
}
