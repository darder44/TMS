@section modal {
    <div class="modal fade" id="dialogAdvancedSearch" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="mySearchModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document" data-toggle="LgbValidate" data-valid-button="#btn_query" data-valid-modal="#dialogAdvancedSearch">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="mySearchModalLabel">查詢條件</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body modal-query">
                    @RenderSection("query", false)
                    <form class="form-inline" asp-condition="false">
                        <div class="row">
                            <div class="form-group col-sm-auto">
                                <label class="control-label" for="MatchCase">區分大小寫</label>
                                <input id="MatchCase" hidden type="checkbox" data-default-val="false" data-toggle="toggle" data-onstyle="success" data-on="是" data-off="否" />
                            </div>
                            <div class="form-group col-sm-auto">
                                <label class="control-label" for="MatchWholeWord">全字匹配</label>
                                <input id="MatchWholeWord" hidden type="checkbox" data-default-val="false" data-toggle="toggle" data-onstyle="success" data-on="是" data-off="否" />
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btn_reset" class="btn btn-info btn-fill"><i class="fa fa-trash-o" aria-hidden="true"></i><span>重置</span></button>
                    <button type="button" id="btn_query" class="btn btn-primary btn-fill"><i class="fa fa-search" aria-hidden="true"></i><span>查詢</span></button>
                </div>
            </div>
        </div>
    </div>
    @RenderSection("modal", false)
    @RenderSection("customModal", false)
}
