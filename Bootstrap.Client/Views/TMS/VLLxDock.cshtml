@model NormalModel
@{
ViewBag.Title = "裝載碼頭總表";
Layout = "_BestLog";
}
@section css {

}
@section javascript {
<script src="~/js/vllxdock.js" asp-append-version="true"></script>
}

<!--新增、編輯欄位-->
@section modal {
}

<!--查詢-->
@section query{
<form class="form-inline">
    <div class="row">
        <div class="form-group col-sm-6" asp-condition="@Model.BestAdmin">
            <label class="control-label" for="txt_Facility">倉庫</label>
            <input type="text" class="form-control" data-toggle="lgbSelect" />
            <select data-toggle="lgbSelect" class="d-none" id="txt_Facility" data-default-val="" >
                <option value="">請選擇倉庫</option>
                @foreach (var Facility in @Model.Facilities)
                {
                <option value="@Facility.Value">@string.Format("{0}　{1}", Facility.Value, Facility.Key)</option>
                }
            </select>
        </div>
        <div class="form-group col-sm-auto">
            <label class="control-label" for="txt_RouteNo">路線編號</label>
            <input type="text" class="form-control" id="txt_RouteNo" maxlength="11" data-default-val="" />
        </div>
        <div class="form-group col-sm-auto">
            <label class="control-label" for="txt_Stop">揀貨單號</label>
            <input type="text" class="form-control" id="txt_Stop" maxlength="10" data-default-val="" />
        </div>
        <div class="form-group col-sm-auto">
            <label class="control-label" for="txt_Dock">碼頭</label>
            <input type="text" class="form-control" id="txt_Dock" maxlength="10" data-default-val="" />
        </div>
        <div class="form-group col-sm-auto">
            <label class="control-label" for="txt_Driver">司機</label>
            <input type="text" class="form-control" id="txt_Driver" maxlength="50" data-default-val="" />
        </div>
        <div class="form-group col-sm-auto">
            <label class="control-label" for="txt_VehicleKey">車號</label>
            <input type="text" class="form-control" id="txt_VehicleKey" maxlength="30" data-default-val="" />
        </div>
    </div>
    <div class="row">
        <div class="form-group col-sm-6">
            <label class="control-label" for="txt_ExpectDate_Start">報到日期(起)</label>
            <div class="input-group input-append datepicker">
                <input id="txt_ExpectDate_Start" class="form-control" size="16" type="text" value="@DateTime.Today.ToString("yyyy/MM/dd")" readonly
                    data-default-val="">
            </div>
        </div>
        <div class="form-group col-sm-6">
            <label class="control-label" for="txt_ExpectDate_End">報到日期(訖)</label>
            <div class="input-group input-append datepicker">
                <input id="txt_ExpectDate_End" class="form-control" size="16" type="text" value="" readonly
                    data-default-val="">
            </div>
        </div>
    </div>    
</form>
}

@section gear{
<a id="tb_export" href="#" title="匯出資料" asp-auth="Export"><i class="fa fa-download"></i></a>

}

@section toolbar{
<button id="btn_export" type="button" class="btn btn-warning" asp-auth="Export"><i class="fa fa-download"
        aria-hidden="true"></i><span>匯出資料</span></button>
}

@section card{
<div class="card">
    <div class="card-header">
        裝載碼頭總表
    </div>
    <div class="card-body">
        <table id="vllxdock-table"></table>
    </div>
</div>
}

